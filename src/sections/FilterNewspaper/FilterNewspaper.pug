mixin FilterNewspaper(props)
	//- # ПОДКЛЮЧЕНИЕ ДЛЯ ПРОВЕРОК DATA, OPT, ELEM # -//
	include ../../shared/helpers/pug/shortcut-check-store

	//- # ПОЛУЧЕНИЕ CSS КЛАССОВ КОМПОНЕНТА # -//
	include FilterNewspaper.cn.pug
	- const styles = classes(props && props.cn);

	//- # ВЕРСТКА КОМПОНЕНТА # -//
	section(class=styles.filterNewspaper)
		+Container
			+I('Filters', {data: {dataIdComponent: '2222'}})
				+FiltersPanel
					+FiltersSearch({data: {action: '/newspaper'}})
					+FiltersLinkControl({
						elem: {
							ButtonFilterArr: [
								{ data: { text: 'все года', href: '/newspaper' }, cn: { jsActiveLinkControl: true } },
								{ data: { text: '2023', href: '/newspaper/2023' } },
								{ data: { text: '2022', href: '/newspaper/2022' } },
								{ data: { text: '2021', href: '/newspaper/2021' } },
								{ data: { text: '2020', href: '/newspaper/2020' } },
								{ data: { text: '2019', href: '/newspaper/2019' } },
								{ data: { text: '2018', href: '/newspaper/2018' } },
								{ data: { text: '2017', href: '/newspaper/2017' } },
								{ data: { text: '2016', href: '/newspaper/2016' } },
								{ data: { text: '2015', href: '/newspaper/2015' } },
							]
						}
					})
					+FiltersSelectControl(ELEM('FiltersSelectControl'))
				+FiltersContentContainer(class=styles.filterNewspaperContainer)
					for item in ELEM_ARR('NewspaperCardArr')
						+I('NewspaperCard', item)

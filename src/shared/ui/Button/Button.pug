mixin Button(props)
	//- # ПОДКЛЮЧЕНИЕ ДЛЯ ПРОВЕРОК DATA, OPT, ELEM # -//
	include ../../../shared/helpers/pug/shortcut-check-store

	//- # ЛОГИКА КОМПОНЕНТА # -//
	-
		const TAG = DATA('href', false) ? 'a' : 'button';
		const isWithIcon = OPT('icon');

	//- # ПОЛУЧЕНИЕ CSS КЛАССОВ КОМПОНЕНТА # -//
	include Button.cn.pug
	- const styles = classes({...props.cn, isWithIcon});

	//- # ВЕРСТКА КОМПОНЕНТА # -//
	#{TAG}(class=styles.button
		href=DATA('href', false)
		disabled=OPT('disabled')
		download=DATA('download', false)
		type=DATA('type', false)
		data-order=DATA('order', false)
		data-event-id=DATA('eventId', false)
		data-modal-init=DATA('modalInit', false)
		data-program-name=DATA('programName', false)
		data-purchase-number=DATA('purchaseNumber', false)
		)&attributes(attributes)
		if DATA('img')
			img(src=DATA('img') alt="")
		else if DATA('text')
			span&attributes(attributes.Span)
				| !{DATA('text')}

		if OPT('icon')
			include include-svg/arrow
		if OPT('icon-download')
			include include-svg/download
		if OPT('icon-copy')
			include include-svg/copy
		if OPT('icon-close')
			include include-svg/close
		if DATA('spriteId', false)
			+Sprite(DATA('spriteId'))
